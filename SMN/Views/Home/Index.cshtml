@{
    ViewData["Title"] = "Home Page";
    var posts = (List<SMN.Data.Entities.Post>)ViewData["posts"];
}


    <div class="container h-100">
        <div class="row justify-content-center">
            <img src="~/img/logo.png" alt="logo" height="60px" class="mr-3" />

            <h2>Emri i shkolles</h2>
        </div>
        <div class="row mt-5">
            @foreach (var item in posts)
            {
            <div class="col-md-4">
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src="~/img/a.jpg" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">@item.Titulli</h5>
                        <p class="card-text">@item.Pershkrimi</p>
                        <a href="#" class="btn btn-primary">Go somewhere</a>
                    </div>
                </div>
            </div>
            }
        </div>


    </div>